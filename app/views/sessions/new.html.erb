<div class="login-page">
  <div class="form">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.text_field :username, placeholder:  t("views.sessions.new.username"), class: "form-control" %>
      <%= f.password_field :password, placeholder: t("views.sessions.new.password"), class: "form-control" %>
      <%= link_to t("views.sessions.new.forgot"), new_password_reset_path %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%=t "views.sessions.new.remember" %></span>
        <% end %>
      <%= f.submit t "views.layouts.login", class: "btn btn-primary" %>
    <% end %>
    <hr>
    <button onclick="login()" class="btn btn-primary"><i class="fa fa-facebook" aria-hidden="true"></i></button>
  </div>
</div>


