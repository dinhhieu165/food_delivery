<% provide(:title, t("views.password_resets.edit.title")) %>
<h1><%= t("views.password_resets.edit.title") %></h1>

<div class="login-page">
  <div class="form">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.password_field :password, placeholder: t("views.password_resets.edit.password"), class: "form-control" %>

      <%= f.password_field :password_confirmation, placeholder: t("views.password_resets.edit.password_confirmation"), class: "form-control" %>

      <%= f.submit t("views.password_resets.edit.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
