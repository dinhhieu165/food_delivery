<% provide(:title, t("views.password_resets.new.title")) %>
<h1><%=t("views.password_resets.new.title")%></h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
      <%= f.email_field :email, placeholder: t("views.password_resets.new.email"), class: "form-control" %>
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>

      <%= f.submit t("views.password_resets.new.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
