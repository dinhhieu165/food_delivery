<div class="container">
<h1 class="text-center"><%= t "views.layouts.header.list"%></h1>
  <% @users.each do |user| %>
    <div class="row">
      <aside class="col-md-8">
        <section class="user_info">
          <%= image_tag user.avatar_url, alt: user.name, class: "show_avatar" %>
          <h3><%= user.name %></h3>
        </section>
        <p><strong><%= t "views.users.show.email" %>:</strong> <%= user.email %></p>
        <p><strong><%= t "views.users.show.phone_number" %>:</strong> <%= user.phone_number %></p>
        <% if user.customer? %>
          <p><strong><%= t "views.users.show.address" %>:</strong> <%= user.address %></p>
        <% end %>
        <% if user.admin? %>
          <p><%= t "views.users.show.admin" %></p>
        <% elsif user.chef? %>
          <p><%= t "views.users.show.chef" %></p>
        <% elsif user.shipper? %>
          <p><%= t "views.users.show.shipper" %></p>
        <% else %>
          <p><%= t "views.users.show.customer" %></p>
        <% end %>

        <% if !user.admin? %>
          <a href="#authorityUser-<%= user.id%>" data-toggle="modal" class="btn btn-primary"><%= t "views.users.show.authority" %></a>
            <div id="authorityUser-<%= user.id%>" class="modal fade" role="dialog">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><%= t "views.users.update.title" %></h4>
                  </div>
                  <div class="modal-body">
                    <%= form_for user do |f| %>
                      <div class="field">
                        <%= f.label :user_type, t("views.users.show.type")%>
                        <%= f.select :user_type, options_for_select([[t("views.users.update.customer"),Settings.user_type.customer],
                                                                     [t("views.users.update.shipper"), Settings.user_type.shipper],
                                                                     [t("views.users.update.chef"), Settings.user_type.chef]]), class: "form-control" %>
                        <%= %>
                      </div>
                      <br>
                      <div class="field">
                        <%= f.submit t("views.users.show.authority"), class: "btn btn-primary" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
        <hr>
      </aside>
    </div>
  <% end %>
</div>
